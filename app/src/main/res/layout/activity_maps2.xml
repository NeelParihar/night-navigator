<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity2"
    android:id="@+id/map_layout">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_import_export_black_24dp"
                android:layout_centerVertical="true"/>
            <Button
                android:layout_toRightOf="@+id/image1"
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image1"
                android:layout_below="@+id/bt1"
                android:padding="10dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

            <ImageView
                android:id="@+id/imageView1"
                android:src="@drawable/ic_directions_car_black_24dp"
                android:layout_width="60dp"
                android:layout_height="69dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="4dp" />
            <!-- Restaurant name  -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="KALI-PILI"
                android:layout_toRightOf="@+id/imageView1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#fbc02d"/>

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="jgjgjkjkgjkgkjgkjgkgjgfjhfhjfhfj"
                android:layout_below="@id/textViewTitle"
                android:layout_toRightOf="@+id/imageView1"
                android:padding="1sp"
                />


           </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:src="@drawable/ic_directions_car_black_24dp"
                    android:layout_width="60dp"
                    android:layout_height="69dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="4dp" />
                <!-- Restaurant name  -->
                <TextView
                    android:id="@+id/textViewTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="COOL CAB"
                    android:layout_toRightOf="@+id/imageView2"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#fbc02d"/>

                <TextView
                    android:id="@+id/textViewShortDesc1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="jgjgjkjkgjkgkjgkjgkgjgfjhfhjfhfj"
                    android:layout_below="@id/textViewTitle1"
                    android:layout_toRightOf="@+id/imageView2"
                    android:padding="1sp"
                    />


            </RelativeLayout>

        </LinearLayout>
    </android.support.design.card.MaterialCardView>

</RelativeLayout>